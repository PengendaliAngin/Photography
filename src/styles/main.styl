@import 'nib' // CSS3 extensions for Stylus: http://visionmedia.github.io/nib/

// variables!

slide_width = 1450px
slide_height = 770px
slide_background = #002200

slide_transition_length = 1.5s
slide_transition_easing = ease
slide_transition_rotate_y = 120deg
// Safari bugs out on 3d transform-origins, so we have to fake it
slide_transition_nudge_x = 0px

bullet_transition_length = .3s
bullet_transition_easing = ease
bullet_transition_translate_x = 16px

// base

*
  box-sizing: border-box
  margin: 0
  padding: 0

@media print
  *
    -webkit-print-color-adjust: exact

@page
  size: landscape
  margin: 0

header
  width:100%
  height:40px
  background: linear-gradient(#fff,#aeaeae)

nav
 position:absolute
 display:block

nav ul ul
  display: none
  transition:0.5s

nav ul li:hover > ul
  display: block
  transition:0.5s

nav ul 
  background: #efefef
  padding: 0
  list-style: none
  position: relative
  display: inline-table
  transition:0.5s

nav ul:after 
  content: "" 
  clear: both
  display: block
  transition:0.5s

nav ul li 
  transition:0.5s
  background: linear-gradient(#fff,#aeaeae)

nav ul li:hover 
  background: #4b545f
  transition:0.5s

nav ul li:hover a 
  color: #000
  transition:0.5s

nav ul li a 
  display: block 
  padding:9px
  color: #757575 
  text-decoration: none
  transition:0.5s

nav ul ul  
  border-radius: 0px 
  padding: 0
  position: absolute 
  top: 100%
  transition:0.5s
  border-top-right-radius:20px
  background:transparent
nav ul ul li 
  float: none
  border-top: 1px solid #6b727c
  border-bottom: 1px solid #575f6a
  position: relative
  transition:0.5s
  height:30px
  width:300px
  border-top-right-radius:20px
  border-bottom-right-radius:20px

nav ul ul li a 
  padding: 5px 10px
  transition:0.5s
  border-top-right-radius:20px
  border-bottom-right-radius:20px

nav ul ul li a:hover 
  background: #4b545f
  transition:0.5s
  color:#aeaeae
  height:30px


nav ul ul ul  
  position: absolute 
  left: 100%; top:0
  transition:0.5s


// bespoke.js layout styles

article
  transition: background slide_transition_length slide_transition_easing
  display: none
  &.bespoke-parent
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow: hidden
    @media print
      overflow: visible
      position: static
    perspective: 600px
  background: #000
  margin-top:40px

.bespoke-slide
  transition:
    transform slide_transition_length slide_transition_easing,
    opacity slide_transition_length slide_transition_easing,
    background slide_transition_length slide_transition_easing
  transform-origin: 50% 50% 0
  backface-visibility: hidden
  display: flex
  flex-direction: column
  justify-content: left
  align-items: left
  text-align: left
  width: slide_width
  height: slide_height
  position: absolute
  top: 50%
  margin-top: (slide_height / 2) * -1
  left: 50%
  margin-left: (slide_width / 2) * -1
  background: linear-gradient(#aeaeae,#77f)
  padding: 40px
  border-radius: 0
  @media print
    zoom: 1 !important // disable bespoke-scale
    height: 745px // seems to correspond with an A4, landscape page height
    width: 100%
    page-break-before: always
    position: static
    margin: 0

.bespoke-before
  transform: translateX(slide_transition_nudge_x * -1) translateX(slide_width / -2) rotateX(slide_transition_rotate_y * -1) translateY(slide_width / -2)

.bespoke-after
  transform: translateX(slide_transition_nudge_x) translateX(slide_width / 2) rotateX(slide_transition_rotate_y) translateZ(slide_width / 2)
  @media print
    transform: none

.bespoke-inactive
  opacity: 0
  pointer-events: none
  @media print
    opacity 1

.bespoke-active
  opacity: 1

// bespoke-bullet styles

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-bullet-inactive
  opacity: 0
  li&
    transform: translateX(bullet_transition_translate_x)
  @media print
    opacity: 1

.bespoke-bullet-active
  opacity: 1

// bespoke-scale styles

.bespoke-scale-parent
  perspective: 600px
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  @media print
    transform: none !important

// bespoke-progress styles

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 5px
  @media only screen and (min-width: 1366px)
    height: 4px
  @media print
    display: none

.bespoke-progress-bar
  transition: width .6s ease
  position: absolute
  height: 100%
  background: #0089f3
  border-radius: 0 4px 4px 0

// bespoke-state styles

.emphatic,
.emphatic .bespoke-slide
  background: slide_background

// prism styles

pre
  padding: 26px !important
  border-radius: 8px

// content styles

body
  font-family: helvetica, arial, sans-serif
  font-size: 18px

h1
  font-size: 72px
  line-height: 82px
  letter-spacing: -2px
  margin-bottom: 16px
  text-align:center

h2
  font-size: 42px
  letter-spacing: -1px
  margin-bottom: 8px

h3
  font-size: 24px
  font-weight: normal
  margin-bottom: 24px
  color: #606060

hr
  visibility: hidden
  height: 20px

ul
  list-style: none

p
  margin: 0 100px 12px
  line-height: 22px
  font-size:20px

a
  color: #0089f3
  text-decoration: none

img
  max-width:45%
  height:auto
  vertical-align:middle